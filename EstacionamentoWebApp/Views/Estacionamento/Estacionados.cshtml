@{
    // Define o título da página, utilizado no layout (_Layout.cshtml)
    ViewData["Title"] = "Veículos Estacionados";
    // Converte o model recebido para uma lista de strings (placas de veículos)
    var veiculos = Model as List<string>;
}

<h2>Veículos Estacionados</h2>

@if (veiculos != null && veiculos.Any())
{
     // Exibe cada placa como item de lista
    <ul>
        @foreach (var placa in veiculos)
        {
            <li>@placa</li>
        }
    </ul>
}
else
{
    // Caso a lista esteja vazia ou nula, exibe mensagem de vazio
    <p>Nenhum veículo está estacionado no momento.</p>
}

<a href="@Url.Action("Index", "Estacionamento")" class="btn btn-primary mt-3">Voltar ao início</a>
